<!-- bannerbelow.liquid -->
<section class="banner_below">
  <div class="wrapper">
  <div class="custom_wrap_homeblock">

  {%- for block in section.blocks -%}
          <div class="block_custom_wrap">
            <div class="block_custom_wrapimage">
              <img src="{{ block.settings.image|img_url:  'master' }}" alt="{{ block.settings.image.alt }}" />

            </div>
            {% if block.settings.title != blank %}
            <div class="block_custom_wraptitle">
            	{{ block.settings.title }}
            </div>
          {% endif %}
            {% if block.settings.answer != blank %}
            <div class="block_custom_wrapanswer">
            	{{ block.settings.answer }}
            </div>
          {% endif %}
          </div>
  {%- endfor -%}
    </div>

              {%- unless section.settings.bannerbelow_label == blank -%}
          <a href="{{ section.settings.bannerbelow_link }}" class="btn custom_btn">{{ section.settings.bannerbelow_label }}</a>
          {%- endunless -%}

    </div>
</section>

<style>
  section.banner_below{
  background: #FDEAE5;
  padding:60px;
  text-align: center;
}
section.banner_below .wrapper{
  margin: auto;
}

.custom_wrap_homeblock {
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.custom_wrap_homeblock .block_custom_wrap {
  flex: 0 0 30%;
  max-width: 288px;
}
@media all and (min-width:768px) and (max-width:1024px){
  section.banner_below{
    padding:60px 0;
  }
  .custom_wrap_homeblock .block_custom_wrap{
    flex:0 0 31%
  }
}

  @media all and (max-width: 767px){

  .custom_wrap_homeblock .block_custom_wrap {
    margin: auto;
    margin-bottom: 60px;
  }

  .custom_wrap_homeblock .block_custom_wrap:last-child {
    margin-bottom: 30px;
  }
  section.banner_below .block_custom_wrapimage{
    min-height: auto;
  }
}
section.banner_below .block_custom_wrapimage img{
  max-height:100px;
}

.custom_wrap_homeblock .block_custom_wraptitle {
  margin: 15px auto 0 auto;
  font-family: Sora;
  font-style: normal;
  font-weight: normal;
  font-size: 22px;
  line-height: 26px;
  width: 100%;
  text-align: center;
  color: #F2552C;
}

.custom_wrap_homeblock .block_custom_wrapanswer {
  margin:20px 0 0;
  font-family: Nunito Sans;
  font-style: normal;
  font-weight: normal;
  font-size: 20px;
  line-height: 26px;
  text-align: center;

  color: #000000;
}

section.banner_below a {
  margin: 50px 0 0!important;
  display: inline-block;

}

@media all and (max-width: 767px){
  section.banner_below{
    /*     padding: 66px 0 113px 0; */
    padding: 70px 0;
  }
  .hero__inner{
    padding: 80px 0;
  }
}
@media all and (max-width: 575px){

  .custom_wrap_homeblock .block_custom_wrap{
    flex: 0 0 33.33%;
    margin-bottom: 80px;
  }
  .custom_wrap_homeblock .block_custom_wrap:last-child{
    margin-bottom: 0;
  }
  .custom_wrap_homeblock .block_custom_wrapanswer p br {
    display: none;
  }
  section.banner_below a{
    padding: 22px 10px 10px 10px;
    margin: 80px 0 0;
    width: 148px;
    height: 67px;
    font-weight: 600;
    font-size: 18px;
    line-height: 23px;
    text-transform: uppercase;
  }
  section.banner_below .block_custom_wrapimage{
    min-height: auto;
  }
  .custom_wrap_homeblock .block_custom_wraptitle{
    margin-top: 10px;
  }
  .custom_wrap_homeblock .block_custom_wrapanswer p {
    margin-bottom: 0;
  }
}
.block_custom_wrapimage img{
  width: 100%;
}
  .custom_wrap_homeblock .block_custom_wraptitle{
    color: #000;
    line-height: 1.2;
    font-weight: 600;
    font-family: 'Sora', sans-serif !important;
    font-size: 11px;
  }

  .banner_below .wrapper {
    max-width: 770px;
        width: 100%;
    margin: 0 auto;
  }

  .banner_below .block_custom_wrapimage {
    width: 70px;
    height: 70px;
    margin-left: auto;
    margin-right: auto;
    min-height: unset;
  }

  section.banner_below .block_custom_wrapimage img{
    max-height: unset;
  }

 .block_custom_wraptitle{
    max-width: 90px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 480px){

    .custom_wrap_homeblock .block_custom_wrap{
      margin: 0;
    }

     section.banner_below .block_custom_wrapimage img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }


 .banner_below{
      padding: 32px 0;
      border-top: 1px solid #000;
      border-bottom: 1px solid #000;
    }
  }
</style>


{% schema %}
  {
    "name": "Banner Below",
	"settings": [
		{
            "type": "text",
            "id": "bannerbelow_label",
            "label": "Button label",
		      	"default": "Shop now"
          },
          {
            "type": "url",
            "id": "bannerbelow_link",
            "label": "Button link",
		      	"default": "/collections/all"
          }
	],
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "answer",
            "label": "Content"
          },
		  {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
        ]
      }
    ],
"presets": [
    {
      "name": "Banner Block",
      "category": "Banner Below"
    }
  ]
  }
{% endschema %}