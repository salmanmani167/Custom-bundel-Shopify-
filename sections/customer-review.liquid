    "id":"caption",
    "label":"Caption"
  },
  {
    "type":"image_picker",
    "id":"captionimage",
    "label":"Caption Image"
  }
    ],
    "blocks": [
      {
        "type":"review",
        "name":"Review",
        "settings":[
          {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
          },
          {
            "type":"text",
            "id":"text",
            "label":"Reviewer Name"
          },
