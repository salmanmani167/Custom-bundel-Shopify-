{% schema %}
{
  "name": "Info Section",
  "settings": [
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "info-description", "label": "Description" },
      {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "icon_text",
      "label": "Icon Text",
      "default": "30 Day Money Back Guarantee"
    }
  ],
  "blocks": [
    {
      "type": "accordion",
      "name": "Accordion Item",
      "settings": [
         { "type": "image_picker", "id": "accordion-image", "label": "Accordion Image" },
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "textarea", "id": "content", "label": "Content" },
         { "type": "image_picker", "id": "image-author", "label": "Image" },
         { "type": "text", "id": "content-heading", "label": "Name" },
         { "type": "textarea", "id": "content-sucribe", "label": "Subscribers" },
           { "type": "image_picker", "id": "image-author1", "label": "Image" },
         { "type": "text", "id": "content-heading1", "label": "Name" },
         { "type": "textarea", "id": "content-sucribe1", "label": "Subscribers" },
           { "type": "image_picker", "id": "image-author2", "label": "Image" },
         { "type": "text", "id": "content-heading2", "label": "Name" },
         { "type": "textarea", "id": "content-sucribe2", "label": "Subscribers" },
           { "type": "image_picker", "id": "image-author3", "label": "Image" },
         { "type": "text", "id": "content-heading3", "label": "Name" },
         { "type": "textarea", "id": "content-sucribe3", "label": "Subscribers" },
           { "type": "image_picker", "id": "image-author4", "label": "Image" },
         { "type": "text", "id": "content-heading4", "label": "Name" },
         { "type": "textarea", "id": "content-sucribe4", "label": "Subscribers" }
      ]
    },
    {
      "type": "logo",
      "name": "Logos",
      "settings": [
        { "type": "image_picker", "id": "logo", "label": "Logo" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Info Section",
      "blocks": [
        { "type": "accordion" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" },
        { "type": "logo" }
      ]
    }
  ]
}
{% endschema %}

<style>
.custom-section {
  display: flex;
  align-items: stretch;
  gap: 70px;
  margin-top:40px;
}
.image-container {
  width: 50%;
}
.content-container {
  width: 50%;
}
  .image-container img{
    width:100%;
    border-radius:10px;
  }
.accordion-ps {
  border-bottom: 1px solid #ACACAC;
  margin-bottom: 10px;
  padding-bottom:10px;
      transition: all 1s ease-in-out;
}

    
.accordion-header-ps {
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.accordion-content-ps {
  display: none;
  padding: 20px 10px 10px;
  font-weight: 400;
    font-size: 18px;
    line-height: 23px;
    color: black;
}
.accordion-ps.active .accordion-content-ps {
  display: block;
}
  .accordion-ps .arrow{
     transition: all .5s ease-in-out;
  }
.accordion-ps.active .arrow {
  transform: rotate(180deg);
   transition: all .5s ease-in-out;
}

.accordion-sub-heading-ps img{
  width: 55px;
}
.accordion-sub-heading-ps{
      display: flex;
    align-items: center;
    gap: 32px;
font-weight: 600;
font-size: 17.97px;
line-height: 24.52px;
color:#000000;
}
  .logos{
    margin:35px 0px;
        display: flex;
    gap: 50px;
  }

.custom-section-info{
  max-width:1170px;
  padding:0px 20px;
  margin:50px auto;
}
.custom-section-info h3{
font-weight: 600;
font-size: 22px;
line-height: 30.01px;
color: #000000;
  margin:0px 0px 8px;
  text-align:center;
}
.custom-section-info h2{
font-weight: 800;
font-size: 45px;
line-height: 52px;
letter-spacing: -1%;
text-align: center;
color: #000000;
  width: 630px;
    margin: 0px auto;
}
.info-content-description{
font-weight: 400;
font-size: 18px;
line-height: 23px;
letter-spacing: 0%;
  color:#000000;
  margin:0px 0px 26px;
}
.trusted-accordion-ps-content{
      display: flex;
    align-items: center;
  gap:16px;
}
.trusted-accordion-ps-content h5{
  margin:0px;
font-weight: 800;
font-size: 20px;
line-height: 27.28px;
color:#000000;
}
.trusted-accordion-ps-content-details{
  display: flex;
    align-items: center;
    gap: 7px;
}
.trusted-accordion-ps-content-details p{
  margin:0px;
font-weight: 400;
font-size: 16px;
line-height: 21.82px;
letter-spacing: 0%;
color:#000000;
}

.accordion-ps.active .trusted-accordion-ps.accordion-content-ps{
  display: flex;
    flex-direction: column;
    gap: 22px;
}



  
</style>




<section class="custom-section-info">
  
    <h3>{{ section.settings.subheading }}</h3>
    <h2>{{ section.settings.heading }}</h2>
    
  <div class="custom-section">
  
  <div class="image-container">
    {% if section.settings.image %}
      <img src="{{ section.settings.image | img_url: 'master' }}" alt="">
    {% endif %}
  </div>
  <div class="content-container">

    
   <p class="info-content-description">{{ section.settings.info-description }}</p>
    
    {% for block in section.blocks %}
      {% if block.type == 'accordion' %}
        <div class="accordion-ps">
          <div class="accordion-header-ps" onclick="toggleAccordion(this)">
        <div class="accordion-sub-heading-ps">
          <img src="{{ block.settings.accordion-image | img_url: 'master' }}"/>
            {{ block.settings.title }}
        </div>
        <span class="arrow">   <svg width="20" height="10" viewBox="0 0 20 10" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M0.899902 0.994995L9.8999 8.995L18.8999 0.994995" stroke="black"/> </svg>   </span>
          </div>
        {% if block.settings.content != blank %}
          <div class="accordion-content-ps">
                 {{ block.settings.content }} 
          </div>
          {% endif %}

           {% if block.settings.image-author != blank %}
          <div class="trusted-accordion-ps accordion-content-ps">


     
            <div class="trusted-accordion-ps-content">
              <img src="{{ block.settings.image-author | img_url: 'master' }}"/>
              <div class="trusted-accordion-ps-inner-content">
                <h5>{{ block.settings.content-heading }}</h5>
                <div class="trusted-accordion-ps-content-details">
                <svg width="23" height="16" viewBox="0 0 23 16" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"> <rect width="23" height="16" fill="url(#pattern0_1_821)"/> <defs> <pattern id="pattern0_1_821" patternContentUnits="objectBoundingBox" width="1" height="1"> <use xlink:href="#image0_1_821" transform="scale(0.0434783 0.0625)"/> </pattern> <image id="image0_1_821" width="23" height="16" preserveAspectRatio="none" xlink:href="data:image/png;base64,"/> </defs> </svg>
                 <p>{{ block.settings.content-sucribe }}</p>
                </div>
                </div>
              </div>

             {% if block.settings.image-author1 != blank %}
              <div class="trusted-accordion-ps-content">
              <img src="{{ block.settings.image-author1 | img_url: 'master' }}"/>
              <div class="trusted-accordion-ps-inner-content">
                <h5>{{ block.settings.content-heading1 }}</h5>
                <div class="trusted-accordion-ps-content-details">
                <svg width="23" height="16" viewBox="0 0 23 16" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"> <rect width="23" height="16" fill="url(#pattern0_1_821)"/> <defs> <pattern id="pattern0_1_821" patternContentUnits="objectBoundingBox" width="1" height="1"> <use xlink:href="#image0_1_821" transform="scale(0.0434783 0.0625)"/> </pattern> <image id="image0_1_821" width="23" height="16" preserveAspectRatio="none" xlink:href="data:image/png;base64,"/> </defs> </svg>
                 <p>{{ block.settings.content-sucribe1 }}</p>
                </div>
                </div>
              </div>
                {% endif %}
                    {% if block.settings.image-author2 != blank %}
              <div class="trusted-accordion-ps-content">
              <img src="{{ block.settings.image-author2 | img_url: 'master' }}"/>
              <div class="trusted-accordion-ps-inner-content">
                <h5>{{ block.settings.content-heading2 }}</h5>
                <div class="trusted-accordion-ps-content-details">
                <svg width="23" height="16" viewBox="0 0 23 16" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"> <rect width="23" height="16" fill="url(#pattern0_1_821)"/> <defs> <pattern id="pattern0_1_821" patternContentUnits="objectBoundingBox" width="1" height="1"> <use xlink:href="#image0_1_821" transform="scale(0.0434783 0.0625)"/> </pattern> <image id="image0_1_821" width="23" height="16" preserveAspectRatio="none" xlink:href="data:image/png;base64,"/> </defs> </svg>
                 <p>{{ block.settings.content-sucribe2 }}</p>
                </div>
                </div>
              </div>
                   {% endif %}
                    {% if block.settings.image-author3 != blank %}
              <div class="trusted-accordion-ps-content">
              <img src="{{ block.settings.image-author3 | img_url: 'master' }}"/>
              <div class="trusted-accordion-ps-inner-content">
                <h5>{{ block.settings.content-heading3 }}</h5>
                <div class="trusted-accordion-ps-content-details">
                <svg width="23" height="16" viewBox="0 0 23 16" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"> <rect width="23" height="16" fill="url(#pattern0_1_821)"/> <defs> <pattern id="pattern0_1_821" patternContentUnits="objectBoundingBox" width="1" height="1"> <use xlink:href="#image0_1_821" transform="scale(0.0434783 0.0625)"/> </pattern> <image id="image0_1_821" width="23" height="16" preserveAspectRatio="none" xlink:href="data:image/png;base64,"/> </defs> </svg>
                 <p>{{ block.settings.content-sucribe3 }}</p>
                </div>
                </div>
              </div>
                  {% endif %}
                   {% if block.settings.image-author4 != blank %}
              <div class="trusted-accordion-ps-content">
              <img src="{{ block.settings.image-author4 | img_url: 'master' }}"/>
              <div class="trusted-accordion-ps-inner-content">
                <h5>{{ block.settings.content-heading4 }}</h5>
                <div class="trusted-accordion-ps-content-details">
                <svg width="23" height="16" viewBox="0 0 23 16" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"> <rect width="23" height="16" fill="url(#pattern0_1_821)"/> <defs> <pattern id="pattern0_1_821" patternContentUnits="objectBoundingBox" width="1" height="1"> <use xlink:href="#image0_1_821" transform="scale(0.0434783 0.0625)"/> </pattern> <image id="image0_1_821" width="23" height="16" preserveAspectRatio="none" xlink:href="data:image/png;base64,"/> </defs> </svg>
                 <p>{{ block.settings.content-sucribe4 }}</p>
                </div>
                </div>
              </div>
          {% endif %}

        
            </div>
         {% endif %}
          </div>

         



      
      {% endif %}
    {% endfor %}
    
    <div class="logos">
      {% for block in section.blocks %}
        {% if block.type == 'logo' and block.settings.logo %}
          <img src="{{ block.settings.logo | img_url: 'small' }}" alt="">
        {% endif %}
      {% endfor %}
    </div>
    
     <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
    <div class="icon-with-text-banner">
      <img src="{{ section.settings.icon | img_url: 'small' }}" alt="icon">
      <span>{{ section.settings.icon_text }}</span>
    </div>


          
  </div>
          </div>
</section>

<script>
function toggleAccordion(element) {
  element.parentElement.classList.toggle('active');
}
</script>
