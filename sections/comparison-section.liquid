<div class="comparision-section">
  <div class="comasrision-section-inner">


 

    <div class="common-button__box-ps">
   
    <div class="commom-button-box-details">

      <h5>{{ section.settings.heading }} </h5>
      <p>{{ section.settings.description }} </p>
      <img class="image-details-ps" src="{{ section.settings.image | img_url: '' }}"/>
      
     <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
    <div class="icon-with-text-banner">
      <img src="{{ section.settings.icon | img_url: 'small' }}" alt="icon">
      <span>{{ section.settings.icon_text }}</span>
    </div>

     </div>
      
    </div>





    
    <div class="compersion-main-section-inner">
       

      <div class="comapersion-section-top-bar">
      
        <div class="comparsion-section-image-left">
          <p class="comparsion-section-image-left-heaidng">Solderstick</p>
          {% if  section.settings.left_main_image != blank %}
            <img src="{{ section.settings.left_main_image | image_url:width:412 }}" alt="{{ section.settings.left_main_image.alt }}" class="">
          {% endif %}
        </div>
            <p class="vs--comparsion">VS</p>
        <div class="comparsion-section-image-right">
          <p class="comparsion-section-image-right-heading">Others</p>
          {% if  section.settings.right_main_image != blank %}
            <img src="{{ section.settings.right_main_image | image_url:width:412 }}"  alt="{{ section.settings.right_main_image.alt }}" class="">
          {% endif %}
        </div>
      </div>



   

         <div class="details-comparison">
              {% for block in section.blocks %}
           <div class="details-comparison-text">
             <img src="{{ block.settings.right-image | img_url: 'master' }}"/>
             <p>{{ block.settings.details-text }}</p>
             <img src="{{ block.settings.cross-image | img_url: 'master' }}"/>
           </div>
                   {% endfor %}
         </div> 
    </div>

      <div class="only-mbl-buttoncomparsion">
       <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
    <div class="icon-with-text-banner">
      <img src="{{ section.settings.icon | img_url: 'small' }}" alt="icon">
      <span>{{ section.settings.icon_text }}</span>
    </div>

      </div>
    


    
  </div>
</div>

{% schema %}
{
  "name": "Comparision section",
  "settings": [
    {
      "type":"header",
      "content":"Bottom Content"
    },
     {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Fast & Convenient Way To Connect Wires."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
     {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "icon_text",
      "label": "Icon Text",
      "default": "30 Day Money Back Guarantee"
    },
    {
      "type":"header",
      "content":"Compare Table"
    },
    {
      "type":"richtext",
      "id":"table_title",
      "label":"Main Title"
    },

    {
      "type":"image_picker",
      "label":"Left Main Image",
      "id":"left_main_image"
    },
    {
      "type":"image_picker",
      "label":"Mobile Left Main Image",
      "id":"left_mobile_main_image"
    },
    {
      "type":"image_picker",
      "label":"Right Main Image",
      "id":"right_main_image"
    }
  ],
    "blocks": [
    {
      "type":"Points",
      "name":"Point",
      "settings":[
        
          {
        "type": "image_picker",
        "id": "right-image",
        "label": "Right Image"
      }, 
        {
            "type":"text",
            "label":"Advantages Point",
            "id":"details-text"
          },
          {
        "type": "image_picker",
        "id": "cross-image",
        "label": "Image"
      }
      ]
    }
    ],
"presets": [
  {
    "name":"Comparision section"
  }
]
}
{% endschema %}







