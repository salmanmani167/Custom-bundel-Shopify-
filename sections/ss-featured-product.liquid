<div class="featured__product-container">
  
    {% if section.settings.pretitle != blank or section.settings.content != blank %}
        <div class="featured__product-header">
            {% if section.settings.pretitle != blank %}
                <h3>{{ section.settings.pretitle }}</h3>
            {% endif %}
            {% if section.settings.content != blank %}
                <div class="featured__product-header-text">{{ section.settings.content }}</div>
            {% endif %}
        </div>
    {% endif %}

    {% if section.blocks.size > 0 or section.settings.img != blank %}
        <div class="featured__product-inner-content-row">
            {% if section.settings.img != blank or section.settings.salebadge != blank %}
                <div class="featured__product-inner-col">
                    <div class="featured__product-image">
                        <img src="{{ section.settings.img | img_url: 'master'}}">
                        {% if section.settings.salebadge != blank %}
                            <div class="featured__product-badge">
                                {{ section.settings.salebadge }}
                            </div>
                        {% endif %}
                    </div>
                </div>
                {% else %}
                <div class="featured__product-inner-col">
                    <div class="featured__product-image">
                        {{ 'image' | placeholder_svg_tag }}
                        {% if section.settings.salebadge != blank %}
                            <div class="featured__product-badge">
                                {{ section.settings.salebadge }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            {% if section.blocks.size > 0 or section.settings.btntext != blank %}
                <div class="featured__product-inner-col">
                    <ul class="featured__product-list">
                    {% for block in section.blocks %}
                        <li>
                            <span class="checkicon">
                                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <rect width="18" height="18" rx="9" fill="#F2542C"/>
                                    <path d="M5 9.42857L7.4 12L13 6" stroke="white" stroke-width="2"/>
                                </svg>
                            </span>
                            {{ block.settings.listtext }}</li>
                    {% endfor %}
                    </ul>

                    {% if section.settings.btntext != blank %}
                        <div class="view__all-button">
                            <a href="{{ section.settings.btnurl }}">{{ section.settings.btntext }}</a>
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    {% endif %}

</div>

