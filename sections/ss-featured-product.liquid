{% schema %}
{
    "name": "Featured Product v2",
    "class": "shopify-featured-product-v2",
    "settings": [
        {
            "type": "text",
            "id": "pretitle",
            "label": "Pre-title",
            "default": "Featured"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Section title",
            "info": "Please make the word bold if you want to highlight to show the highlight color",
            "default": "<p>Lorem ipsum dolor <strong>sit amet</strong></p>"
        },
        {
            "type": "image_picker",
            "id": "img",
            "label": "Main Image"
        },
        {
            "type": "text",
            "id": "salebadge",
            "label": "Sale Badge",
            "default": "15% OFF"
        },
        {
            "type": "text",
            "id": "btntext",
            "label": "Button label",
            "default": "SHOP NOW"
        },
        {
            "type": "url",
            "id": "btnurl",
            "label": "Button link"
        }
    ],
    "blocks":[
        {
            "type": "list",
            "name": "Featured list",
            "settings": [
                {
                    "type": "text",
                    "id": "listtext",
                    "label": "List text",
                    "default": "Lorem ipsum dolor sit amet"
                }
            ]
        }
    ],
    "presets": [
        {
          "name": "Featured Product v2",
          "category": "Product",
          "blocks":[
            {
                "type": "list"
            },
            {
                "type": "list"
            },
            {
                "type": "list"
            }
          ]
        }
    ]
}
{% endschema %}