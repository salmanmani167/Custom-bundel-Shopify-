{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="product-overview section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="product-overview-main">
      {% if section.settings.product_overview_title != blank %}
      <div class="product-overview-title">
        <h2> {{ section.settings.product_overview_title }} </h2>
      </div>
      {% endif %}
      <div class="product_description">
        <div class="read-less-text">{{ product.description | truncatewords: 80 }}</div>
        <div class="moretext">
          {{ product.description }} 
        </div>
      </div>
      <div class="product-overview-button">
        <a class="moreless-button">{{ section.settings.moreless_button_text }}</a>
      </div>
    </div>
  </div>
</div>
<style>
.product-overview {
    width: 100%;
    word-wrap: break-word;
}
.product-overview .product-overview-title h2 {
    color: #333;
    font-size: 24px;
    text-transform: none;
    font-weight: 600;
    line-height: 160%;
    text-align: center;
    margin: 0 0 16px 0;
}
.product-overview .product_description,
.product-overview .product-overview-button {
    width: 100%;
    max-width: 1140px;
    margin: 0 auto;
    padding: 20px;
}
.product-overview .product-overview-button a {
    cursor: pointer;
}
.product-overview .read-less-text p {
    font-size: 16px;
    font-style: normal;
    line-height: 1.6em;
    font-family: 'Nunito Sans' !important;
    font-weight: 500;
    color: #333;
}

.product-overview .product-overview-button a {
    font-size: 16px;
    font-style: normal;
    line-height: 1.6em;
    font-family: 'Nunito Sans' !important;
    font-weight: 900;
    color: #F2542C;
}
.moretext {
    display: none;
}
.remove {
  display: none;
}
</style>
<script>
  $('.moreless-button').click(function() {
  $('.moretext').slideToggle();
  if ($('.moreless-button').text() == "Read more") {
    $(this).text("Read less")
    $(".read-less-text").addClass("remove")
  } else {
    $(this).text("Read more")
    $(".read-less-text").removeClass("remove")
  }
});
</script>
{% schema %}
  {
    "name": "Product Overview",
    "settings": [
      {
        "type": "text",
        "id": "product_overview_title",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "moreless_button_text",
        "label": "Button Text"
      },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
    ],
    "presets": [
    {
      "name": "Product Overview",
      "blocks": [
        
      ]
    }
  ]
  }
{% endschema %}