<div class="sectionTwo">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <div class="common_heading hide-mob">{{ section.settings.title }}</div>
    {% endif %}
    {% if section.settings.mobiletitle != blank %}
      <div class="common_heading forMob">{{ section.settings.mobiletitle }}</div>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <div class="common-text hide-mob">{{ section.settings.subtitle }}</div>
    {% endif %}
    {% if section.settings.mobiolesubtitle != blank %}
      <div class="common-text forMob">{{ section.settings.mobiolesubtitle }}</div>
    {% endif %}

    <div class="sec2_row">
      <div class="sec2_col-1">
        {% if section.settings.video.sources[1].url != blank %}
          <div class="sec2-video">
            {% if section.settings.imgbanner == 'image' %}
              <div class="image_banner">
                <img src="{{ section.settings.video_poster | img_url:'master' }}" alt="img">
              </div>
            {% else %}
              <div class="sec2_video-img">
                <img src="{{ section.settings.video_poster | img_url:'master' }}" alt="img_video">
              </div>
              <video
                controls
                playsinline
                width="100%"
                height="auto"
                id="myVdo1"
                style="display:none;"
                {% if section.settings.video_poster != blank %}
                  poster="{{ section.settings.video_poster | img_url: 'master' }}"
                {% endif %}
              >
                <source src="{{ section.settings.video.sources[1].url }}" type="video/mp4">
              </video>
            {% endif %}
          </div>
        {% endif %}

        <div class="forDesk">
          {% if section.settings.appica_title != blank %}
            <h3 class="sec2-app-heading">
              <img src="{{ section.settings.appica_title_logo | image_url:width:48 }}" width="48" height="52" alt="ic">
              {{- section.settings.appica_title }}
            </h3>
          {% endif %}
          <ul class="sec2_app-list">
            {% for block in section.blocks %}
              {% if block.settings.image != blank %}
                <li>
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url:width:100 }}"
                      width="100"
                      height="100"
                      alt="{{ section.settings.image.alt }}"
                    >
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <p>{{ block.settings.text }}</p>
                  {% endif %}
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="sec2_col-2">
        {% if section.settings.tech_title != blank %}
          <h3 class="tech_specification-hdng">{{ section.settings.tech_title }}</h3>
        {% endif %}
        {% if section.settings.tech_logo1 != blank
          or section.settings.Specification_title1 != blank
          or section.settings.Specification_text1 != blank
        %}
          <div class="specification_row">
            <div class="specification_col-1">
              <img
                src="{{ section.settings.tech_logo1 | image_url:width:70 }}"
                width="70"
                height="70"
                alt="{{ section.settings.tech_logo1.alt }}"
              >

              <p>{{ section.settings.Specification_title1 }}</p>
            </div>
            <div class="specification_col-2">
              <div>{{ section.settings.Specification_text1 }}</div>
            </div>
          </div>
        {% endif %}
        {% if section.settings.tech_logo2 != blank
          or section.settings.Specification_title2 != blank
          or section.settings.Specification_text2 != blank
        %}
          <div class="specification_row">
            <div class="specification_col-1">
              <img
                src="{{ section.settings.tech_logo2 | image_url:width:70 }}"
                width="70"
                height="70"
                alt="{{ section.settings.tech_logo2.alt }}"
              >
              <p>{{ section.settings.Specification_title2 }}</p>
            </div>
            <div class="specification_col-2">
              <div>{{ section.settings.Specification_text2 }}</div>
            </div>
          </div>
        {% endif %}
        {% if section.settings.tech_logo3 != blank
          or section.settings.Specification_title3 != blank
          or section.settings.Specification_text3 != blank
        %}
          <div class="specification_row">
            <div class="specification_col-1">
              <img
                src="{{ section.settings.tech_logo3 | image_url:width:70 }}"
                width="70"
                height="70"
                alt="{{ section.settings.tech_logo3.alt }}"
              >

              <p>{{ section.settings.Specification_title3 }}</p>
            </div>
            <div class="specification_col-2">
              <div>{{ section.settings.Specification_text3 }}</div>
            </div>
          </div>
        {% endif %}
        {% if section.settings.tech_logo4 != blank
