{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <div class="header__menu_wrapper">
                  {% for block in section.blocks %}
                    {% if block.type == 'menu-icon' and block.settings.parent_link == link.title %}
                      <img src="{{ block.settings.menu-icons | image_url }}">
                    {% endif %}
                  {% endfor %}
                  <span
                    {%- if link.child_active %}
                      class="header__active-menu-item"
                    {% endif %}
                  >
                    {{- link.title | escape -}}
                  </span>
                </div>
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </summary>
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <ul
                  class="mega-menu__list page-width{% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                  role="list"
                >
                

                  {%- for childlink in link.links -%}

                     <a
                        id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                        href="{{ childlink.url }}"
                        class="custom-menu--nasha  mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %} cstm-ancr{{ forloop.index }}""
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        <div class="header__menu_wrapper">
                          {% for block in section.blocks %}
                            {% if block.type == 'childmenu-icon'
                              and block.settings.childparent_link == childlink.title
                            %}
                              <img src="{{ block.settings.childmenu-icons | image_url }}">
                            {% endif %}
                          {% endfor %}
                          {% if childlink.title != blank %}
                             {{ childlink.title | escape }}
                          {% endif %}
                         
                        </div>
                      </a>

                   <li class="link-ps{% if childlink.current %} mega-menu__link--active{% endif %} cstm-{{ forloop.index }}">
                      <!-- <a
                        id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                        href="{{ childlink.url }}"
                        class="custom-menu--nasha  mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        <div class="header__menu_wrapper">
                          {% for block in section.blocks %}
                            {% if block.type == 'childmenu-icon'
                              and block.settings.childparent_link == childlink.title
                            %}
                              <img src="{{ block.settings.childmenu-icons | image_url }}">
                            {% endif %}
                          {% endfor %}
                          {% if childlink.title != blank %}
                             {{ childlink.title | escape }}
                          {% endif %}
                         
                        </div>
                      </a> -->

                      
                        <ul class="list-unstyled custom-menu-ps" role="list" >
                          {%- for grandchildlink in childlink.links -%}
                            <li class="custom-menu-ps-link {% if grandchildlink.current %}mega-menu__link--active-ps{% endif %}">
                              <a
                                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                href="{{ grandchildlink.url }}"
                                class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                <div class="header__menu_wrapper">
                                  {% for block in section.blocks %}
                                    {% if block.type == 'grandchildmenu-icon'
                                      and block.settings.grandchildparent_link == grandchildlink.title
                                    %}
                                      <img src="{{ block.settings.grandchildmenu-icons_1 | image_url }}">
                                    {% endif %}
                                  {% endfor %}
                                  {{ grandchildlink.title | escape }} 
                                </div>
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      
                    </li>

                    {%- endfor -%}

                </ul>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <div class="header__menu_wrapper">
              {% for block in section.blocks %}
                {% if block.type == 'menu-icon' and block.settings.parent_link == link.title %}
                  <img src="{{ block.settings.menu-icons | image_url }}">
                {% endif %}
              {% endfor %}
              <span
                {%- if link.current %}
                  class="header__active-menu-item"
                {% endif %}
              >
                {{- link.title | escape -}}
              </span>
            </div>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
